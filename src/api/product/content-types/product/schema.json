{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Catalog products"
  },
  "options": { "draftAndPublish": true },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "gallery": { "type": "media", "multiple": true, "allowedTypes": ["images"] },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "specs": {
      "type": "component",
      "repeatable": true,
      "component": "spec.pair"
    },
    "datasheet": { "type": "media", "multiple": false, "allowedTypes": ["files"] },
    "featured": { "type": "boolean", "default": false }
  }
}
